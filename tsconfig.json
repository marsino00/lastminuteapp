{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src", "index.tsx"],
  "exclude": [
    "node_modules/",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "scripts/",
    "__tests__/",
    "coverage"
  ]
}
